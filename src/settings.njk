<ul class="settings-bar">
  <li><a onClick = "toggleDarkMode();" tabindex="0" role="button">toggle dark mode</a></li>
</ul>

<script>  
  function toggleDarkMode() {
    if(localStorage.getItem("darkmode") == "Off" || localStorage.getItem("darkmode") === null){
	  localStorage.setItem("darkmode", "On");
	} else {
	  localStorage.setItem("darkmode", "Off");
    }
	checkDarkmode();
  }

  document.querySelectorAll('a').forEach(function(button) {
    button.addEventListener('keydown', function(evt) { 
      if(evt.keyCode == 13 || evt.keyCode == 32) {
        button.click();
      }
    });  
  });
</script>

